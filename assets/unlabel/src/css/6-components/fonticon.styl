// Added for this project
.fonticon
  vertical-align middle
  text-indent: 0 // prevent disapearing if parent as negative indent to hide label 
  color: currentColor
  
  iconbox-resize(size, font_size) {
    width: size
    height: size
    line-height size
    font-size: font_size
  }
  
  &--box,
  &--smallBox {
    position relative
    display inline-block
    text-decoration: none
    user-select: none
    text-align center
  }

  &--box {
    iconbox-resize(40px, 20px)
  }
  
  &--smallBox {
    iconbox-resize(36px, 16px)
  }