.footer {
  background-color $color_darkGrey
  color: #fff 
}

.footer__bar {
  @media $mq_m {
    padding: 0 32px
  }
  
  &--top {
    @media $mq_s_only {
      padding: 20px 0
    }
    
    .footer__nav {
      @media $mq_m {
        position relative
        height: 96px
      }
    }
    
    .footer__navList {
      @media $mq_s_only {
        display block
      }
    }
  }
  
  &--bottom {
    font-size: 11px
    border-top: 1px solid #3D3D3D
    
    @media $mq_s_only {
      padding: 25px
      display block
      text-align center
    }

    @media $mq_m {
      height: 57px
    }
  }
}

.footer__home {
  @media $mq_m {
    position absolute
    top: 50%
    left: 0
    transform translate(0, -50%)
  }
}

.footer__copyrightSymbol {
  font-family Lucida Grande, Lucida Sans Unicode, Lucida Sans, Geneva, Verdana, sans-serif // todo: make util ?
}

.footer__nav {
  @media $mq_m {
    display flex
    align-items center
    justify-content center
  }
  
  &--primary {
    font-family $font_bold
    text-align center
    
    @media $mq_s_only {
      line-height 32px
    }

    @media $mq_m {
      li + li {
        margin-left: 32px
      }
    }
    
    @media $mq_l {
      li + li {
        margin-left: 46px
      }
    }
  }
}

.footer__navList {
  display flex
  align-items center
  justify-content center
  
  &--legal {
    @media $mq_s_only {
      margin-top 8px
    }
    
    li + li {
      margin-left: 32px
    }
  }

  &--social {
    font-size: 16px
    
    @media $mq_s_only {
      margin-top 15px
    }
    
    @media $mq_m {
      margin-left: 32px
    }
  }
}