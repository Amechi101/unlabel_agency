.loader {
  position relative
  display: block
  width: 32px
  height: 4px
  overflow: hidden
  background-color $color_lightGrey 
  
  &::before {
    content: ''
    display: block
    position absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background-color $color_darkGrey
    animation: loader-anim 2s ease-out infinite
  }

  &--center {
    margin 0 auto
  }
}

@keyframes loader-anim {
  0% {
    transform: translate(-101%, 0)
  }
  20% {
    transform: translate(0%, 0)
  }
  80% {
    transform: translate(0%, 0)
  }
  90% {
    transform: translate(100%, 0)
  }
  100% {
    transform: translate(100%, 0)
  }
}