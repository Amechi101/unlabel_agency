.checkout {}

.checkout__header {
  padding: 42px 0
  
  @media $mq_m {
    padding: 96px 0 48px
    display: flex
    justify-content: space-between
    align-items: center
  }
}

.checkout__headerNavList {
  @media $mq_s_only {
    margin-top 16px
  }
}

.checkout__headerNavListItem {
  display: inline-block
  
  & + .checkout__headerNavListItem {
    margin-left: 24px
    @media $mq_m {
      margin-left: 48px
    }
  }
}

.checkout__basketRow {
  @media $mq_m {
    display: flex
    align-items: stretch
  }
}

.checkout__basketCol {
  padding: 32px 0
  position relative
  
  @media $mq_m {
    padding: 32px 48px
  }
  
  &--left {
    color: #fff
    padding: 1px 0
    
    @media $mq_m {
      flex-grow: 1
      padding: 16px 0
    }
    
    &::before {
      background-color $color_darkGrey
      
      @media $mq_m {
        right: 0
      }
    }
  }
  
  &--right {
    @media $mq_m {
      display: flex
      flex-direction: column
    }

    &::before {
      background-color $color_product
      @media $mq_m {
        left: 0
      }
    }
    
    @media $mq_m {
      width: 280px
      padding-right 0
    }
  }
  
  &::before {
    content: ''
    display: block
    width: 100vw
    height: 100%
    position absolute
    top: 0
    bottom: 0
    z-index -1
    
    @media $mq_s_only {
      left: 50%
      transform: translate(-50%, 0)
    }
  }
}

.checkout__basketColGroup {
  & + .checkout__basketColGroup {
    margin-top: 24px
    
    @media $mq_m {
      margin-top: 48px
    }
  }
}

.checkout__basketProductList {  
  @media $mq_m {
    max-width 644px
    display: flex
    flex-wrap: wrap
    justify-content: flex-start
  }
}

.checkout__basketProductListItem {
  margin: 32px 0
  
  @media $mq_m {
    width: 50%
    margin: 16px 0
  }
}

.checkout__basketTotalPrice {
  margin-top: 5px
}

.checkout__addressSection {
  padding: 48px 0
}

.checkout__addressIdenticalCheckbox {
  margin-top 16px
}

.checkout__addressForm {
  margin-top 42px
}

.checkout__paymentNav {
  background-color $color_product
  padding: 30px 0
}

.checkout__paymentNavWrapper {
  @media $mq_m {
    display: flex
    align-items: center
    justify-content: space-between
  }
}

.checkout__paymentNavGroup {
}

.checkout__paymentOptionsList {
  @media $mq_s_only {
    margin-top: 16px
  } 
  @media $mq_m {
    display: flex
    align-items: center
  }
}

.checkout__paymentOptionsListItem {
  
  & + .checkout__paymentOptionsListItem {
    @media $mq_s_only {
      margin-top: 16px
    }
    @media $mq_m {
      margin-left: 40px
    }
    @media $mq_l {
      margin-left: 80px
    }
  }
}

.checkout__bankcardList {
  display: inline-block
  white-space: nowrap
  margin-left: 20px
}

.checkout__bankcardListItem {
  display: inline-block

  & + .checkout__bankcardListItem {
    margin-left 7px
  }
}

.checkout__bankcardLogo {
  vertical-align middle
  display: inline-block
  background-color: #fff
  height: 36px
  width: 60px
  background-size 40px auto
  background-repeat no-repeat
  background-position: 50% 50%
  border-radius 3px
  
  for brand in ('american-express' 'visa' 'mastercard') {
    &--{brand} {
      background-image: url('../img/bankcard/'+brand+'_logo.svg')
    }
  }
}

.checkout__cardForm {
  margin: 48px 0
}

.checkout__footer {
  overflow-x hidden
  margin-bottom 48px
  
  @media $mq_m {
    margin-bottom 96px
  }
}

.checkout__footerRow {
  @media $mq_m {
    display: flex
    align-items: stretch
  }
}

.checkout__footerCol {
  padding: 32px 0
  position relative
  
  @media $mq_m {
    padding: 32px 48px
  }
  
  &--left {
    @media $mq_m {
      flex-grow: 1
    }
  }
  
  &--right {
    color: #fff
    
    &::before {
      content: ''
      display: block
      width: 100vw
      height: 100%
      position absolute
      top: 0
      bottom: 0
      z-index -1
      background-color $color_darkGrey
      
      @media $mq_s_only {
        left: 50%
        transform: translate(-50%, 0)
      }
      
      @media $mq_m {
        left: 0
      }
    }
    
    @media $mq_m {
      width: 280px
      padding-right 0
    }
  }
}

.checkout__footerCalculList {
  @media $mq_m {
    text-align: right
  }
}

.checkout__footerCalculListItem {
  & + .checkout__footerCalculListItem {
    margin-top: 24px
  }
}

.checkout__footerCalculPrice {
  font-family: $font_bold
}

.checkout__footerTotalPrice {
  margin-top: 5px
}

.checkout__footerTotalAction {
  margin-top: 24px
  
  .cta {
    @media $mq_s_only {
      width: 100%
    }
  }
}

.checkout__footerTotalSecure {
  margin-top: 24px
  font-size: 11px
  
  .fonticon {
    vertical-align top
  }
}

