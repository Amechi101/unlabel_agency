.bankcard {
  position relative
  background-color: #252525
  border-radius 5px
  
  @media $mq_m {
    max-width 320px 
  }
}

.bankcard__wrapper {
  padding-bottom: 62.5%
}

.bankcard__bg {
  position: absolute
  width: 100%
  height: 100%
  bottom: 0
  left: 0
  background-position 100% 100%
  background-size: 110% auto
  background-repeat no-repeat
  
  for brand in ('american-express' 'visa') {
    .bankcard.bankcard--{brand} & {
      background-image: url('../img/bankcard/'+brand+'_bg.png')
    }
  }
}

.bankcard__content {
  position: absolute
  width: 100%
  height: 100%
  padding: 30px 30px 30px
  display: flex
  flex-direction: column
  align-items: stretch
  justify-content: space-between
}

.bankcard__header {
  display: flex
  justify-content: flex-end
  height: 23px
}

.bankcard__number {
  display: flex
  justify-content: space-between
  margin-top: 10px
  font-size: 20px
  color: #fff
}

.bankcard__footer {
  display: flex
  justify-content: space-between
}

.bankcard__brand {
  color: #fff
  height: 100%
  width: 100%
  background-position top right
  background-size: auto 100%
  background-repeat no-repeat
  
  for brand in ('american-express' 'visa') {
    .bankcard.bankcard--{brand} & {
      background-image: url('../img/bankcard/'+brand+'_logo.svg')
    }
  }
}

.bankcard__label {
  font-size: fs = 11px
  line-height: fs
  color: #A3A3A3
  white-space: nowrap
}

.bankcard__info {
  font-family: $font_display
  font-size: fs = 14px
  line-height: fs
  color: #fff
  margin-top: 7px
  white-space: nowrap
}
