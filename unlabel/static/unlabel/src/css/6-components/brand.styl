.brand {
  
}

.brand__overviewCol {
  &--info {
    @media $mq_s_only {
      text-align: center
    }
    
    @media $mq_m {
      padding: 48px 64px
      display: flex
      flex-direction: column
      align-items: stretch
      justify-content: space-between
    }
  }
}

.brand__infoHeader {
  @media $mq_s_only {
    margin-top: 30px
  }
}

.brand__location {
  margin-top: 16px
  
  @media $mq_m {
    margin-top: 32px
  }
}

.brand__infoContent {
  @media $mq_s_only {
    margin-top: 42px
  }
}

.brand__followForm {
  @media $mq_m {
    display: inline-block
  }
}

.brand__nbOfFollowers {
  font-family: $font_bold
  
  @media $mq_s_only {
    margin-top: 16px
  }
  
  @media $mq_m {
    display: inline-block
    margin-left: 24px
  }
}