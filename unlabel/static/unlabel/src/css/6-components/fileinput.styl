.fileinput {
  position relative
  display: flex
  align-items: stretch
  cursor: pointer
  
  // Prevent possible touch errors by preventing children pointer events
  & > * {
    pointer-events: none
  }
}

.fileinput__input {
  opacity: 1
  overflow: hidden
  position: absolute
  z-index: -1
  display: block
  width: 100%
  height: 100%
}

.fileinput__filename {
  display: block
  background-color #fff
  flex-grow: 1
  border: 1px solid $color_formInput
  border-left: 0
  display: flex
  padding: 12px
  line-height: 20px
  font-size: 14px
  color: #A3A3A3
  user-select none
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  min-width: 0
  
  .fileinput.has-error & {
    border-color $color_danger 
  }
}