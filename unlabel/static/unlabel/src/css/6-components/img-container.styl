.img-container {
  position: relative
  overflow: hidden
  
  img {
    a & {
      transform: scale(1)
      transition(transform, 1s)
    }
    
    a:hover & {
      transform: scale(1.1)
    }
  }
  
  &--square,
  &--landscape,
  &--portrait {
    background-color $color_lightGrey
    img {
      position absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      object-fit: cover
    }
  }

  &--square {
    padding-bottom: 100%
  }
  
  &--landscape {
    padding-bottom: 75%
  }
  
  &--portrait {
    padding-bottom: 150%
  }
}