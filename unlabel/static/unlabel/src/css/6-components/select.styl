.select {
  position: relative
  
  &::before {
    position: absolute
    top: 50%
    right: 21px
    transform: translate(50%, -50%)
    display: block
    content: ''
    width: 0
    height: 0
    border-style: solid
    border-width: 5px 5px 0 5px
    border-color: $color_darkGrey transparent transparent transparent
  }
  
  select {
    position: relative
    display inline-block
    font-size: 14px
    padding: 13px 42px 13px 16px
    line-height: 18px
    border: 1px solid $color_formInput
    color: $color_darkGrey
    font-family: $font_bold
    background: transparent
    border-radius: 0
    appearance: none
    cursor: pointer
    width: 100%
  }
  
  .add-to-basket &,
  &--cta {
    select {
      border: 2px solid $color_darkGrey
      padding: 15px 42px 18px 16px
      font-family: $font_bold
    }
  }
  
  &--borderLess {
    &::before {
      right: 0
      transform: translate(0, -50%)
    }
    select {
      border-color: transparent !important
      padding-left: 0
      padding-right: 12px
    }
  }
  
  &--multiple {
  }
  

  &.has-error {
    select {
      border-color: $color_danger
    }
  }
}