.toggle {
  user-select: none 
}

.toggle__label {
  cursor: pointer

  &--left {
    margin-right: 10px
  }
  &--right {
    margin-left: 10px
  }
}

.toggle__slider {
  display: inline-block
  vertical-align: middle
  width: 38px
  height: 16px
  position: relative
  cursor: pointer

  &::before,
  &::after {
    content: ''
    display: block
    position: absolute
    left: 50%
    top: 50%
  }

  &::before {
    transform: translate(-50%, -50%)
    width: 28px
    height: height = 8px
    border-radius: (height / 2)
    background-color: $color_darkGrey
  }
  
  &::after {
    width: size = 16px
    height: size
    border-radius: 50%
    background-color: #fff
    border: 2px solid $color_darkGrey
    transform: translate(-50%, -50%)
    transition: transform 150ms ease-out
  }
  
  &.is-left {
    &::after {
      transform: translate(-100%, -50%)
    }
  }
  
  &.is-right {
    &::after {
      transform: translate(-0%, -50%)
    }
  }
}